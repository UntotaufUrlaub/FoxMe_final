<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    // das ersetzt fragment_first
    //android:background="#13DF42"

    <ListView
        android:id="@+id/konsument_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:dividerHeight="6dp"
        />

    <Button
        android:id="@+id/button_konsument_fetchit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/konsument_list_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Erneuern" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/konsument_list_view"
        android:layout_toRightOf="@+id/button_konsument_fetchit"

        android:text="Filter" />


</LinearLayout>